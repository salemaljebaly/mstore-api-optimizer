<?xml version="1.0"?>
<ruleset name="MStore API Optimizer">
    <description>Essential coding standards for MStore API Optimizer</description>

    <!-- Files to check -->
    <file>.</file>

    <!-- Exclude paths -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>build/</exclude-pattern>
    <exclude-pattern>.github/</exclude-pattern>

    <!-- Use WordPress coding standards with relaxed rules -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow yoda conditions to be optional -->
        <exclude name="WordPress.PHP.YodaConditions"/>
        
        <!-- Skip documentation requirements for now -->
        <exclude name="Squiz.Commenting.FileComment"/>
        <exclude name="Squiz.Commenting.ClassComment"/>
        <exclude name="Squiz.Commenting.FunctionComment"/>
        
        <!-- Relax variable naming -->
        <exclude name="WordPress.NamingConventions.ValidVariableName"/>
        
        <!-- Allow error_log for debugging -->
        <exclude name="WordPress.PHP.DevelopmentFunctions.error_log_error_log"/>
    </rule>

    <!-- Essential security rules -->
    <rule ref="WordPress.Security.EscapeOutput"/>
    <rule ref="WordPress.Security.ValidatedSanitizedInput"/>

    <!-- Show progress and use colors -->
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="parallel" value="8"/>
</ruleset>